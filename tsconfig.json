{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@coconut/*": [
        "@coconut/*",
      ]
    },
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "types": [
      "jest"
    ],
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}